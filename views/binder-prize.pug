extends layout 

block styles 
  link(rel="stylesheet", href="/stylesheets/binder.css")

block content 
  div.page-wrapper 
    h1= title 
      nbsp 
      span(style="font-size:0.8rem;color:gray")= "$" + total.toFixed(2)

    if (illustrator.length)
      h3 Illustrator Cards
        - const illustrator_total = illustrator.reduce((acc, next) => acc + (next.value.market * (next.value.count || 1)), 0).toFixed(2)
        span.binder_sub_total= ` - $${illustrator_total}`
      hr
      div.binder-container 
        each card in illustrator
          a(href=`/collection/${card._id}`)
            div.prize-card-container
              div.prize-img-container(id=card._id)
                img(src=card.meta.images.large, alt=card.pokemon.name)
                div.prize-overlay 
              div.prize-info-container 
                a(href=`/collection/${card._id}`)= card.pokemon.name 
                p= "$" + card.value.market.toFixed(2)

